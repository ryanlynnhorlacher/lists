<% if @task.errors.any? %>
	<% @task.errors.full_messages.each do |error|  %>
		<%= error %>
	<% end %>
<% end %>


<%= form_for [@list, @task] do |f| %>
<%= f.label :name %>
<%= f.text_field :name, required: true %>
<br>
<%= f.label :description %>
<%= f.text_field :description%>
<br>
<%= f.label :status %>
<%= f.select :status, ['Not started', 'In-progress', 'Complete'] %>
<br>
<%= f.submit %>
<% end %>